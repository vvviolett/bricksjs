{
  "extends": ["./tsconfig.json"],
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "plugins": [{ "transform": "typescript-transform-paths", "afterDeclarations": true }]
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "specs/**/*.ts"]
}
