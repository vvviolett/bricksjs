{
  "extends": ["./tsconfig.json"],
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "plugins": [
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["src/*.ts", "lib/*.ts"],
  "exclude": ["node_modules", "spec/**/*.ts"]
}
