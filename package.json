{
  "name": "bricksjs",
  "version": "0.0.1",
  "description": "A javascript utility library",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./types/src/index.es.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./types/src/index.es.d.ts",
        "default": "./dist/index.es.js"
      },
      "require": {
        "types": "./types/src/index.cjs.d.ts",
        "default": "./dist/index.cjs.js"
      }
    }
  },
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "prebuild": "rimraf dist/ types/",
    "build:ts": "tsc",
    "build:dist": "rollup --config rollup.config.ts --configPlugin typescript",
    "build": "npm-run-all build:*",
    "eslint": "eslint **/*.{ts,js}",
    "lint-staged": "npx lint-staged"
  },
  "keywords": [
    "lodash",
    "lodash-es",
    "bricksjs",
    "szchason"
  ],
  "author": "szchason",
  "bugs": {
    "url": "https://github.com/szchason/bricksjs/issues"
  },
  "homepage": "https://github.com/szchason/bricksjs#readme",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "only-allow": "^1.1.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.26.2",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{ts,js}": "npx eslint"
  }
}
